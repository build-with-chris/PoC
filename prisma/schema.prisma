generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model categories {
  id           String         @id
  name         String
  type         CategoryType
  createdAt    DateTime       @default(now())
  updatedAt    DateTime
  transactions transactions[]

  @@unique([name, type])
}

model transactions {
  id           String     @id
  date         DateTime
  amount       Decimal    @db.Decimal(12, 2)
  note         String?
  counterparty String?
  categoryId   String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime
  advancedBy   String?
  isAdvanced   Boolean    @default(false)
  isSettled    Boolean    @default(false)
  settledAt    DateTime?
  categories   categories @relation(fields: [categoryId], references: [id], onDelete: Cascade)
}

enum CategoryType {
  income
  expense
}
